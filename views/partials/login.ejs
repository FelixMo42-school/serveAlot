<div class="container">
    <form method="post">
        <div class="form-group">
            <label for="username">Username</label>
            <input
                type="text"
                id="username"
                name="username"
                class="form-control"
                placeholder="Enter Username"
                required
            />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Enter password"
                required
            />
        </div>
    
        <div class="form-group">
            <input
                type="submit"
                value="log in"
                formaction="/login"
            />
            <span>OR</span>
            <input
                type="submit"
                value="register"
                formaction="/register"
            />
        </div>
    </form>
</div>